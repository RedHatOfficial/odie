cdrom
keyboard us
lang en_US.UTF-8
network --hostname=odie-jumphost

rootpw odie
user --groups=wheel --name=admin --password=odie

{% if installer_method == "gui" %}
graphical
autopart --encrypted
{% else %}
text
{% include './templates/includes/disk-rhel.j2' %}
{% endif %}


timezone UTC
reboot --eject

bootloader --location=mbr --append="rhgb quiet"
zerombr
clearpart --all --initlabel
auth --passalgo=sha512 --useshadow
selinux --enforcing
firewall --enabled
skipx
firstboot --enable

%packages
{% include './templates/includes/common-packages.j2' %}

@odie-jumphost
telnet
mod_ssl
vim-enhanced
docker
%end

%post --nochroot

#!/bin/sh
set -x -v
exec 1>/mnt/sysimage/root/kickstart-stage1.log 2>&1

mkdir -p /mnt/sysimage/opt/odie/install_media
cp -r /run/install/repo/* /mnt/sysimage/opt/odie/install_media/
mv /mnt/sysimage/opt/odie/install_media/container_images/ /mnt/sysimage/opt/odie/images/
%end

%post
#!/bin/sh
set -x -v
exec 1>/root/kickstart-stage2.log 2>&1

LOG_FILE=/root/kickstart-odie.log INTERACTIVE=0 /opt/odie/install_media/odie.sh stage
find /opt/odie -name 'TRANS.TBL' -delete


cat << EOF > /etc/systemd/system/odie-setup.service
[Unit]
Description=ODIE Initial Setup
Requires=docker.service
After=multi-user.target

[Service]
Type=oneshot
RemainAfterFile=true
EnvironmentFile=/etc/odie-env
ExecStart=/opt/odie/src/odie.sh setup --nospin

[Install]
WantedBy=multi-user.target
EOF

chmod 664 /etc/systemd/system/odie-setup.service
echo "LOG_FILE=/root/odie-setup.log" > /etc/odie-env

systemctl enable docker
systemctl enable odie-setup

chage -d 0 root
chage -d 0 admin
eject -i 0
%end
